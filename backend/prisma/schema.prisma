generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Page {
  id String @id @default(cuid())
  path String
  content PageContent[]
}

model PageContent {
  id String @id @default(cuid())
  name String
  pageId String
  page Page @relation(fields: [pageId], references: [id])
  content String
}